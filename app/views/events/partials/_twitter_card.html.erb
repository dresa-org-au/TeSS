<% content_for :og_header do %>
  <% # event twitter meta tags -%>
  <%= tag(:meta, name: "twitter:card",        content: 'summary') %>
  <%= tag(:meta, name: "twitter:site",        content: TeSS::Config.site['title_short']) %>
  <%= tag(:meta, name: "twitter:creator",     content: TeSS::Config.twitter_handle) %>
  <%= tag(:meta, name: "twitter:image",       content: asset_url(TeSS::Config.site['logo_open_graph'])) %>
  <%= tag(:meta, name: "twitter:title",       content: event.title) %>
  <%= tag(:meta, name: "twitter:description", content: render_markdown(event.description)) %>
  <% # event OpenGraph meta tags -%>
  <%= tag(:meta, property: "og:url",          content: request.original_url) %>
  <%= tag(:meta, property: "og:image",        content: asset_url(TeSS::Config.site['logo_open_graph'])) %>
  <%= tag(:meta, property: "og:title",        content: event.title) %>
  <%= tag(:meta, property: "og:description",  content: render_markdown(event.description)) %>
<% end %>
