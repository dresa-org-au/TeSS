<% packages = resource.packages.visible_by(current_user) %>

<div class="row">
  <% if packages.blank? %>
      <%= empty_tag(:p, "This #{resource.class.name.humanize} is currently not included in any packages.", "padding-top: 10px;") %>
  <% else %>
      <ul class="masonry media-grid">
        <% packages.each do |package| %>
            <%= render :partial => "packages/package", :locals => {:package => package} %>
        <% end %>
      </ul>
  <% end %>
</div>
