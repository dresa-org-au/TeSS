<div class="wrapper">
  <% if TeSS::Config.solr_enabled %>
    <div id="sidebar" class="popout-sidebar">
      <%= render partial: "search/common/facet_sidebar",
                 locals: { resources: @trainers_results, resource_type: Trainer } %>
    </div>
  <% end %>

  <div id="content">
    <div class="row">
      <!-- Info -->
      <div class="pull-right">
        <%= info_button('What are trainers are in ' + TeSS::Config.site['title_short'] + '?') do %>
          <%= render_markdown(TrainersHelper::TRAINERS_INFO) %>
        <% end %>
      </div>
    </div>

    <% if TeSS::Config.solr_enabled %>
      <div class="row">
        <%= render partial: "search/common/search_box", locals: { resource_path: trainers_path } %>
        <button class="btn btn-default" id="sidebar-toggle" type="button" autocomplete="off">
          <i class="fa fa-filter"></i> Filters
        </button>
      </div>
      <div class="row">
        <%= render partial: "search/common/sort_by",
                   locals: { resources: @trainers } %>
        <%= render partial: "search/common/search_info",
                   locals: { resources: @trainers_results, resource_type: 'trainer' } %>
        <%= render partial: "search/common/search_filters",
                   locals: { resources: @trainers_results } %>
      </div>
    <% end %>

    <%= render partial: "search/common/pagination_bar", locals: { resources: @trainers } %>

    <hr>

    <%= render @trainers %>

    <%= render partial: "search/common/pagination_bar", locals: { resources: @trainers } %>

  </div>
</div>
